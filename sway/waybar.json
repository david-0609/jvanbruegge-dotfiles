{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
    "modules-center": ["clock"],
    "modules-right": ["network", "battery"],
    "height": 22,
    "sway/window": {
        "max-length": 50
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
        "format": "{:%A, %d.%m.  %H:%M}"
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) "
    }
}
