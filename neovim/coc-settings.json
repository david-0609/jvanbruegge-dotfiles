{
    "languageserver": {
        "clangd-neoMMTd": {
            "command": "clangd",
            "args": ["--query-driver=/opt/poky/2.0.3/sysroots/x86_64-pokysdk-linux/usr/bin/arm-poky-linux-gnueabi/arm-poky-linux-gnueabi-g++"],
            "rootPatterns": ["CMakeLists.txt", "compile_commands.json"],
            "filetypes": ["c", "cc", "cpp", "c++"]
        },
        "dhall": {
            "command": "dhall-lsp-server",
            "filetypes": ["dhall"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        }
    }
}
